<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="vinodhkumar.mt16062_todoapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="22"
        android:targetSdkVersion="24" />

    <uses-permission android:name="android.permission.STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="vinodhkumar.mt16062_todoapp.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="vinodhkumar.mt16062_todoapp.AddItemActivity"
            android:label="New Task"
            android:parentActivityName="vinodhkumar.mt16062_todoapp.MainActivity" />
        <activity
            android:name="vinodhkumar.mt16062_todoapp.DisplayTaskActivity"
            android:parentActivityName="vinodhkumar.mt16062_todoapp.MainActivity" />
        <activity
            android:name="vinodhkumar.mt16062_todoapp.DisplayTask2Activity"
            android:parentActivityName="vinodhkumar.mt16062_todoapp.MainActivity" />
    </application>

</manifest>